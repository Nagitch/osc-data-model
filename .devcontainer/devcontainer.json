{
  "name": "osc-data-model",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "RUST_VERSION": "1.80"  
    }
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-vscode.cpptools",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "matklad.rust-analyzer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  },
  "containerEnv": {
    "CARGO_TERM_COLOR": "always"
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=cargo-registry,target=/home/vscode/.cargo/registry,type=volume",
    "source=cargo-git,target=/home/vscode/.cargo/git,type=volume"
  ],
  "postCreateCommand": "rustup component add clippy rustfmt && cargo --version && rustc --version && sudo chsh -s /bin/bash vscode"
}